            <span style="color:white;float: left;margin: 5px 10px;">修改密码</span>
            <button class="btn" onclick="hideRevise();" style="float: right;background-image: url('../../Image/guanbi.png');background-repeat:no-repeat;background-color:white;height:20px;background-position: 4px 1px;margin: 5px;"></button>
        </div>
        <div class="form-inline" style="margin:20px">
            <span style="margin-left:40px">当前密码</span><input disabled="disabled" class="form-control" style="width:150px;margin-left:10px" />
        </div>
        <div class="form-inline" style="margin:20px">
            <span style="margin-left:40px">密<span style="margin-left:28px">码</span></span><input class="form-control" style="width:150px;margin-left:10px" />
        </div>
        <div class="form-inline" style="margin:20px">
            <span style="margin-left:40px">确认密码</span><input class="form-control" style="width:150px;margin-left:10px" />
        </div>
        <div style="height:40px;background-color:#eeeeee;margin-top:35px;border-top:1px solid #ddd">
            <button style="margin:6px 10px 0px 230px;">确定</button>
            <button onclick="hideRevise();">关闭</button>
        </div>
    </div>


    <script type="text/javascript">
        $(function () {
            //获取侧边栏数据
            GetSidebarData();
            //当前登陆
            $(".nav_right").click(function () {
                $(".xl_img").slideToggle();
                $(".xiala").slideToggle();
            });
        });

        function GetSidebarData() {
            $.ajax({
                url: "/MasterPage/GetSidebarData",
                data: "",
                type: "post",
                dataType: "json",
                success: function (result) {
                    var str = "";
                    $.each(result.rootMeun, function (index, value) {
                        str += "<li>";
                        str += "<span></span>";
                        str += "<a href='javascript:id_" + value.NodeId + "();'>" + value.DisplayName + "</a>";
                        str += "<ul type='none' class='id_" + value.NodeId + "'>";
                        $.each(result.list, function (index, data) {
                            if (data.ParentNodeId == value.NodeId) {
                                str += "<li><a href='" + data.NodeURL + "' style='color:white;text-decoration:none;margin-left:5px'>" + data.DisplayName + "</a></li>";
                            }
                        });
                        str += "</ul></li>";
                    });
                    str += "<li class='tui' ><span ></span><a>退出系统</a></li>";
                    $(".sidebar ul").append(str);
                }
            });
        }

        //个人资料
        function showPersonal() {
            personal.style.display = "block";
            over.style.display = "block";
        }
        function hidePersonal() {
            personal.style.display = "none";
            over.style.display = "none";
        }
        //修改密码
        function showRevise() {
            revise.style.display = "block";
            over.style.display = "block";
        }
        function hideRevise() {
            revise.style.display = "none";
            over.style.display = "none";
        }

        //菜单点击下拉
        function id_10000() {
            $(".id_10000").prev().css("background-color", "rgb(39, 40, 43)");
            $(".id_20000,.id_30000,.id_40000").prev().css("background-color", "rgb(66, 66, 66)");
            $(".id_10000 > li").css("display", "inline-block");
            $(".id_20000 > li,.id_30000 > li,.id_40000 > li").css("display", "none");
            $(".id_10000 > li:eq(0)").css("margin-top", "10px");
        }
        function id_20000() {
            $(".id_20000").prev().css("background-color", "rgb(39, 40, 43)");
            $(".id_10000,.id_30000,.id_40000").prev().css("background-color", "rgb(66, 66, 66)");
            $(".id_20000 > li").css("display", "inline-block");
            $(".id_10000 > li,.id_30000 > li,.id_40000 > li").css("display", "none");
            $(".id_20000 > li:eq(0)").css("margin-top", "10px");
        }
        function id_30000() {
            $(".id_30000").prev().css("background-color", "rgb(39, 40, 43)");
            $(".id_10000,.id_20000,.id_40000").prev().css("background-color", "rgb(66, 66, 66)");
            $(".id_30000 > li").css("display", "inline-block");
            $(".id_20000 > li,.id_10000 > li,.id_40000 > li").css("display", "none");
            $(".id_30000 > li:eq(0)").css("margin-top", "10px");
        }
        function id_40000() {
            $(".id_40000").prev().css("background-color", "rgb(39, 40, 43)");
            $(".id_10000,.id_20000,.id_30000").prev().css("background-color", "rgb(66, 66, 66)");
            $(".id_40000 > li").css("display", "inline-block");
            $(".id_20000 > li,.id_30000 > li,.id_10000 > li").css("display", "none");
            $(".id_40000 > li:eq(0)").css("margin-top", "10px");
        }
    </script>
</body>
</html>
