
@{
    ViewBag.Title = "ListAdd";
    Layout = "~/Views/MasterPage/Main.cshtml";
}

<head>
    <style>
        #Info {
            margin: 25px;
            background-color: white;
            border: 1px solid #c1b5b5;
            border-radius: 5px;
        }

        .ZhuTiXinZen {
            border: 1px solid #c1b5b5;
            margin: 15px 5px 15px;
            border-radius: 5px;
            padding: 10px;
        }

        .ChanPinTianJia {
            border: 1px solid #c1b5b5;
            border-radius: 5px;
            padding: 15px;
            margin: 3px;
        }

        .ChaKanBiaoTi {
            border: 1px solid #c1b5b5;
            background: #3a3939;
            padding: 5px 0px;
        }

        .XinZenChanPingDiBu {
            background-color: #d7d3d3;
            padding: 5px;
        }

        #o {
            width: 100%;
            height: 100%;
            opacity: 0.1;
            display: none;
            position: absolute;
            z-index: 1;
            background-color: gainsboro;
        }

        #p {
            display: none;
            width: 350px;
            position: absolute;
            top: 30px;
            left: 380px;
            z-index: 2;
            background: white;
            border: 1px solid #ddd;
        }
    </style>
</head>
<div class="menuBar" style="margin-bottom:15px;">
    <div style="padding-top:10px;padding-left:30px;">
        <img src="../../Image/fangzi01-copy.png" style="width:13px;height:10px;" />
        <a href="javascript:void(0);" style="margin-top:20px;">首页</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="#" style="margin-top:20px;">仓库作业</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="~/ReturnOrderStocks/ListReturnOrderStock" style="margin-top:20px;">退货管理</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="~/ReturnOrderStocks/ListAdd" style="margin-top:20px;">新增退货</a>
    </div>
</div>

<div class="menuContent">
    <div id="Info" class="container">
        <div class="row">
            <div class="col-md-12" style="border-bottom:1px solid #c1b5b5">
                <h5 style="font-weight:bold;">新增产品退货</h5>
            </div>
        </div>
        <div class="ZhuTiXinZen">
            <div class="row">
                <div class="col-md-3 form-group">
                    退货单号
                    <input class="form-control" disabled="disabled" placeholder="自动生成" type="text" />
                </div>
                <div class="col-md-3 form-group">
                    退货类型
                    @Html.DropDownList("ReturnTypeId", null, htmlAttributes: new { @class = "form-control", @style = "width:180px;" })
                </div>
                <div class="col-md-3 form-group">
                    供应商
                    @Html.DropDownList("SupplierId", null, htmlAttributes: new { @class = "form-control", @style = "width:180px;" })
                </div>
                <div class="col-md-3 form-group">
                    制单人
                    <input value="@(Session["userName"])" disabled="disabled" class="form-control" type="text" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 form-group">
                    制单时间
                    <input class="form-control" type="datetime" />
                </div>
                <div class="col-md-5 form-group">
                    备注
                    <input name="Remark" value="@Model.Remark" class="form-control" type="text" />
                </div>
            </div>
        </div>
        <table class="table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <td>产品编号</td>
                    <td>产品名称</td>
                    <td>退货入库编号</td>
                    <td>规格</td>
                    <td>库位名称</td>
                    <td>退货数量</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="row ChanPinTianJia">
            <div class="col-md-4">
                <button class="btn btn-primary" id="OK">保存</button>
                <button class="btn btn-default">取消</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        //查询详细信息
        QueryXiangXi(@Model.Id);

        //保存
        $("#OK").click(function () {
            var AuditUservalue = "@(Session["userName"])";
            var ReturnTypeIdvalue = $("#ReturnTypeId").val();
            var SupplierIdvalue = $("#SupplierId").val();
            var Remarkvalue = $("[name=Remark]").val();

            //盘点明细表
            var trs = document.getElementsByTagName("tr");  //获取表格所有行
            var sum = [];   //新建一个数组
            for (var i = 1; i < trs.length; i++) {
                var tds = trs[i].cells;
                var stu = {};
                stu.DetailNum = "";
                stu.ReturnId = "";
                stu.ProductNum = tds[0].innerHTML;
                stu.ProductName = tds[1].innerHTML;
                stu.InSNum = tds[2].innerHTML;
                stu.Size = tds[3].innerHTML;
                stu.Location = tds[4].innerHTML;
                stu.Sum = tds[5].innerHTML;
                stu.CreateTime = "";
                stu.IsDelete = 0;
                sum.push(stu);
            }
            if (ReturnTypeIdvalue != 9999) {
                if (SupplierIdvalue != 9999) {
                    $.ajax({
                        url: "@Url.Action("Insert")",
                         data: { detail: sum, ReturnTypeId: ReturnTypeIdvalue,SupplierId:SupplierIdvalue,Remark:Remarkvalue,AuditUser: AuditUservalue },
                        type: "post",
                        dataType: "json",
                        success: function (result) {
                            alert(result);
                        }
                    });
                } else {
                    alert("供应商不能为空！");
                }
            } else {
                alert("退货类型不能为空！");
            }
        });
    })
    
    //查询详细信息
    function QueryXiangXi(InSNumvalue) {
        $.ajax({
            url: "@Url.Action("QueryByIdTUIHUOMinXiInfo")",
            data: { id: InSNumvalue },
            dataType: "json",
            type: "get",
            success: function (result) {
                $.each(result, function (index, value) {
                    var str = "<tr><td>" + value.ProductNum + "</td><td>" + value.ProductName + "</td><td>" + value.InStorageId + "</td><td>" + value.Size + "</td><td>" + value.Location + "</td><td>" + value.Quantity + "</td><td onclick='Delete(this);'><a href='javascript:void(0);'>删除</a></td></tr >";
                    $("tbody").append(str);
                });
            }
        });
    }

    function Delete(obj) {
        $(obj).parent().remove();
    }
</script>