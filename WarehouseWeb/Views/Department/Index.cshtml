<script type="text/javascript">
    //新增
    function insertDepart() {
        insert.style.display = "block";
        o.style.display = "block";
    }
    function hideDepart() {
        insert.style.display = "none";
        bianJi.style.display = "none";
        o.style.display = "none";
    }
    //编辑
    function bianJiDepart(num) {
        bianJi.style.display = "block";
        o.style.display = "block";
        //获取当前编号信息
        $.ajax({
            url: "@Url.Action("QueryByDepartId")",
            data: { DepartId:num },
            dataType: "json",
            type: "post",
            success: function (result) {
                $("[name=departNum]").val(result.DepartNum);
                $("[name=departName]").val(result.DepartName);
            }
        });
    }
    //新增
    function btnAdd() {
        //取值
        var DepartNameValue = $("[name=DepartName]").val();
        //alert(DepartNameValue);
            $.ajax({
                url: "@Url.Action("AddAjax")",
                data: { DepartName: DepartNameValue},
                dataType: "json",
                type: "get",
                success: function (result) {
                    alert(result);
                    $("#insert input").val("");
                    hideDepart();
                    bindData(1);
                }
            });
    }
    //修改
    function updateDepart() {
        //取值
        var DepartNumValue = $("[name=departNum]").val(); 
        var DepartNameValue = $("[name=departName]").val();
            $.ajax({
                url: "@Url.Action("Update")",
                data: { DepartNum: DepartNumValue, DepartName: DepartNameValue},
                dataType: "json",
                type: "get",
                success: function (result) {
                    alert(result);
                    hideDepart();
                    bindData(1);
                }
            });
    }
    //删除
    function DeleteDepart(num) {
        $.ajax({
            url: "@Url.Action("Delete")",
            data: { departId:num },
            dataType: "json",
            type: "post",
            success: function (result) {
                alert(result);
                    bindData(1);
            }
        });
    }
</script>

<script type="text/javascript">
    //使用ajax方法请求数据
    //页面加载时调用
    $(function () {
        $(".first").click(function () {
            //将pageIndex = 1
            bindData(1);
        });

        $(".up").click(function () {
            //当前页 = 当前页 -1
            var pageIndex = parseInt($(".PageIndex").val()) - 1;
            bindData(pageIndex);
        });

        $(".next").click(function () {
            //当前页 = 当前页 + 1
            var pageIndex = parseInt($(".PageIndex").val()) + 1;
            bindData(pageIndex);
        });

        $(".last").click(function () {
            bindData(9999999);
        });

        $(".go").click(function () {
            //获取当前文本框中的页
            var pageIndex = parseInt($(".PageIndex").val());
            bindData(pageIndex);
        });

        //绑定查询按钮事件
        $("#btnSearch").click(function () {
            bindData(1);
        });
        //加载，调用绑定数据方法
        bindData(1);
    
        //全选加事件
        $("#chkAll").click(function () {
            var f = $(this).prop("checked");	 //获取自己的
            $(".ck").prop("checked", f);
        });

        //删除
        $("#del").click(function () {
            var a = $("tbody input:checked").length;
            if (a == 0) {
                alert("请选择要删除的记录");
            } else {
                var b = confirm("您确定要删除选中的" + a + "条记录吗");
                if (b == true) {
                    var text = $("tbody input:checkbox:checked").map(function (index, elem) {
                        return $(elem).val();
                    }).get().join(',');
                    //alert("选中的checkbox的值为：" + text);
                    var arr = text.split(',');
                    var str = [];
                    for (var i = 0; i < arr.length; i++) {
                        var list = {};
                        list.Id = arr[i];
                        str.push(list);
                    }
                    //alert(JSON.stringify(str));
                    $.ajax({
                        url: "@Url.Action("DeleteOther")",
                        data: { list: str },
                        dataType: "json",
                        type: "post",
                        success: function (result) {
                            alert(result);
                            bindData(1);
                        }
                    });
                }
            }
        });
    });

    //绑定数据方法
    function bindData(pageIndexValue) {
        var DepartNumValue = $("#DepartNum").val();
        //获取数据
        $.ajax({
            url: "@Url.Action("GetDepart")",
            data: { DepartNum: DepartNumValue, pageIndex: pageIndexValue },
            dataType: "json",
            type: "post",
            success: function (result) {
                //设置文本框中显示的当前页
                $("#lbMsg").html("当前第" + result.PageIndex + "页" + "    共计" + result.PageCount + "页    共有" + result.Count + "条");
                $(".PageIndex").val(result.PageIndex);


                //清空所有表格（数据行）行
                $("table tr:gt(0)").remove();
                //循环遍历所有数据并显示到控件
                $.each(result.RoleInfies, function (index, value) {
                    var str = "<tr>";
                    str += "<td><input type='checkbox' class='ck' value='" + value.Id + "'/></td>";
                    str += "<td>" + value.Id + "</td>";
                    str += "<td>" + value.DepartNum + "</td>";
                    str += "<td>" + value.DepartName + "</td>";
                    str += "<td>" + value.CreateTime + "</td>";
                    str += "<td><a href = 'javascript:bianJiDepart(" + value.Id + ");' title = '编辑' ><img src='../Image/Write.png' /></a><a href='javascript:DeleteDepart(" + value.Id + ");' title='删除'><img src='../Image/cha.png' /> </a></td>";
                    str += "</tr>";
                    $("tbody").append(str);
                });
            }
        });
    }
</script>