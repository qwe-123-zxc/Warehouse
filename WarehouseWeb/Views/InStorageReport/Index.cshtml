
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterPage/Main.cshtml";
}

<head>
    <style>
        .mainPart {
            width: 1160px;
            height: 530px;
            background-color: white;
            border-radius: 3px;
            margin-top: 20px;
            margin-left: 15px;
            border: 1px solid #ddd;
        }

        .menuContent ul li {
            float: left;
            width: 70px;
            height: 40px;
        }

            .menuContent ul li > span {
                height: 3px;
                width: 70px;
                background-color: red;
                float: left;
            }

            .menuContent ul li > a {
                float: left;
                margin: 10px 12px;
            }

        .first, .last {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 50px;
            height: 30px;
            padding: 2px 10px;
            margin-left: -5px;
        }

        .up, .next {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 60px;
            height: 30px;
            padding: 2px;
            margin-left: -5px;
        }

        .PageIndex {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 30px;
            height: 30px;
            padding: 2px 10px;
            margin-left: -5px;
        }

        .go {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 40px;
            height: 30px;
            padding: 2px;
            margin-left: -5px;
        }
    </style>
</head>

<div class="menuBar" style="border-bottom:1px solid #ddd;">
    <div style="margin-top:10px;margin-left:30px;">
        <img src="~/Image/fangzi01-copy.png" width="13" height="10" />
        <a href="~/Warehouse/Index" style="margin-top:20px;">首页</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="javascript:void(0);" style="margin-top:20px;">报表管理</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="~/InStorage/Index" style="margin-top:20px;">入库报表</a>
    </div>
</div>
<div class="menuContent">
    <ul type="none" style="float: left;margin-left:-25px;margin-top:20px;">
        <li class="li_one">
            <span style="display:none;"></span>
            <a href="javascript:void(0);">近10天</a>
        </li>
        <li class="li_two" style="background-color:white;">
            <span style="background-color:red;"></span>
            <a href="javascript:void(0);" style="margin: 7px 12px;">近30天</a>
        </li>
        <li class="li_three">
            <span style="display:none"></span>
            <a href="javascript:void(0);">近60天</a>
        </li>
        <li class="li_four">
            <span style="display:none"></span>
            <a href="javascript:void(0);">历史>></a>
        </li>
    </ul>
    <div style="width:1160px;padding-bottom: 25px;background-color:white;margin-top:60px;margin-left:15px;padding: 15px;">
        <div style="width:550px;padding-bottom: 30px;background-color:#f9f9f9;border:1px solid #ddd;border-radius:3px">
            <div style="height:35px;background-color:#efefef;">
                <img src="~/Image/liebiao.png" style="float: left;margin-top: 10px;margin-left: 15px;" />
                <span style="margin: 7px 5px;float: left;font-weight: bold;">入库报表</span>
            </div>
        </div>
        <div style="width:550px;padding-bottom: 30px;background-color:#f9f9f9;border:1px solid #ddd;border-radius:3px;float:right;margin-top:-67px">
            <div style="height:35px;background-color:#efefef;">
                <img src="~/Image/liebiao.png" style="float: left;margin-top: 10px;margin-left: 15px;" />
                <span style="margin: 7px 5px;float: left;font-weight: bold;">入库报表</span>
            </div>
        </div>
    </div>
    <div style="width:1160px;background-color:white;margin-top:20px;margin-left:15px;border-radius:3px">
        <div style="height:35px;background-color:#f9f9f9;border:1px solid #ddd;">
            <img src="~/Image/diqiu.png" style="float: left;margin-top: 10px;margin-left: 15px;" />
            <span style="margin: 7px 5px;float: left;font-weight: bold;">入库报表</span>
        </div>
        <table class="table tab-content table-bordered table-hover" style="margin:15px;width:1130px">
            <tr>
                <th>入库单号</th>
                <th>日期</th>
                <th>供应商名称</th>
                <th>总数</th>
                <th>总价</th>
                <th>明细</th>
            </tr>
        </table>
        <div class="form-inline" style="margin: 10px 0px 0px 650px;padding-bottom: 10px;">
            <button class="first" style="background-color: #f9f9f9;border: 1px solid #ddd;width: 60px;height: 30px;padding: 2px 10px;">首页</button>
            <button class="up">上一页</button>
            <input class="PageIndex" type="text" value="1" />
            <button class="go">GO</button>
            <button class="next">下一页</button>
            <button class="last">尾页</button>
            <label>当前页是第 1 页,共计 5 条/ 1 页</label>
        </div>
    </div>
</div>

<script type="text/javascript">
        $(function () {
            $(".li_one").click(function () {
                $(".li_one").css("background-color", "white");
                $(".li_one > span").css("display", "inline-block");
                $(".li_one > a").css("margin", "7px 12px");
                $(".li_two > span,.li_three > span,.li_four > span").css("display", "none");
                $(".li_two,.li_three,.li_four").css("background-color", "transparent");
                $(".li_two > a,.li_three > a,.li_four > a").css("margin", "10px 12px");
            });
            $(".li_two").click(function () {
                $(".li_two").css("background-color", "white");
                $(".li_two > span").css("display", "inline-block");
                $(".li_two > a").css("margin", "7px 12px");
                $(".li_one > span,.li_three > span,.li_four > span").css("display", "none");
                $(".li_one,.li_three,.li_four").css("background-color", "transparent");
                $(".li_one > a,.li_three > a,.li_four > a").css("margin", "10px 12px");
            });
            $(".li_three").click(function () {
                $(".li_three").css("background-color", "white");
                $(".li_three > span").css("display", "inline-block");
                $(".li_three > a").css("margin", "7px 12px");
                $(".li_one > span,.li_two > span,.li_four > span").css("display", "none");
                $(".li_one,.li_two,.li_four").css("background-color", "transparent");
                $(".li_one > a,.li_two > a,.li_four > a").css("margin", "10px 12px");
            });
            $(".li_four").click(function () {
                $(".li_four").css("background-color", "white");
                $(".li_four > span").css("display", "inline-block");
                $(".li_four > a").css("margin", "7px 12px");
                $(".li_one > span,.li_two > span,.li_three > span").css("display", "none");
                $(".li_one,.li_two,.li_three").css("background-color", "transparent");
                $(".li_one > a,.li_two > a,.li_three > a").css("margin", "10px 12px");
            });
        });
</script>


