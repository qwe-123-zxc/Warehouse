
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterPage/Main.cshtml";
}
<head>
    <style>

        .mainPart {
            width: 1160px;
            background-color: white;
            border-radius: 3px;
            margin-top: 20px;
            margin-left: 15px;
            border: 1px solid #ddd;
        }

        .first, .last {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 50px;
            height: 30px;
            padding: 2px 10px;
            margin-left: -5px;
        }

        .up, .next {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 60px;
            height: 30px;
            padding: 2px;
            margin-left: -5px;
        }

        .PageIndex {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 30px;
            height: 30px;
            padding: 2px 10px;
            margin-left: -5px;
        }

        .go {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            width: 40px;
            height: 30px;
            padding: 2px;
            margin-left: -5px;
        }

        #o {
            width: 100%;
            height: 100%;
            opacity: 0.1;
            display: none;
            position: absolute;
            z-index: 1;
            background-color: gainsboro;
        }

        #insert {
            display: none;
            width: 300px;
            height: 220px;
            position: absolute;
            top: 120px;
            left: 340px;
            z-index: 2;
            background: white;
            border: 1px solid #ddd;
        }

        #bianJi {
            display: none;
            width: 300px;
            height: 220px;
            position: absolute;
            top: 120px;
            left: 340px;
            z-index: 2;
            background: white;
            border: 1px solid #ddd;
        }
    </style>
</head>
<div class="menuBar" style="border-bottom:1px solid #ddd;">
    <div style="margin-top:10px;margin-left:30px;">
        <img src="~/Image/fangzi01-copy.png" width="13" height="10" />
        <a href="~/Warehouse/Index" style="margin-top:20px;">首页</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="javascript:void(0);" style="margin-top:20px;">系统设置</a>
        <img src="~/Image/xiangyou.png" width="10" height="10" />
        <a href="~/Role/Index" style="margin-top:20px;">角色管理</a>
    </div>
</div>
<div class="menuContent">
    <div class="mainPart">
        <div style="height:40px;background-color:#eeeeee;border-bottom:1px solid #ddd;">
            <img src="~/Image/diqiu.png" style="float: left;margin:12px 0px 10px 20px" />
            <span style="margin-top:10px;float: left;font-weight: bold;">角色管理</span>
            <div style="width: 200px; margin-top:3px;float: right;">
                <button onclick="insertRole();" class="btn" style="width:60px;background-color:rgb(0, 89, 204);color:white">新增</button>
                <button class="btn" style="width:60px;background-color:rgb(207, 69, 63);color:white">删除</button>
                <button class="btn" style="width:60px;background-color:rgb(56, 159, 189);color:white">导出</button>
            </div>
        </div>
        <div class="row">
            <input id="RoleNum" placeholder="请输入角色编号或名称" class="form-control" style="width:300px;margin: 10px 0px 10px 30px;" />
            <button id="btnSearch" class="btn btn-primary" style="float:left;width: 70px;margin-left: 340px;margin-top:-45px;">搜索</button>
        </div>
        <table class="table tab-content table-hover table-bordered" style="width:1120px;margin-left:16px;">
            <tr>
                <th style="width:30px"><input type="checkbox" /></th>
                <th>序号</th>
                <th>角色编号</th>
                <th>角色名</th>
                <th>创建时间</th>
                <th>备注</th>
                <th>操作</th>
            </tr>
        </table>
        <div class="form-inline" style="margin: 10px 0px 0px 640px;padding-bottom: 10px;">
            <button class="first" style="background-color: #f9f9f9;border: 1px solid #ddd;width: 60px;height: 30px;padding: 2px 10px;">首页</button>
            <button class="up">上一页</button>
            <input class="PageIndex" type="text" value="1" />
            <button class="go">GO</button>
            <button class="next">下一页</button>
            <button class="last">尾页</button>
            <label>当前页是第 1 页,共计 1 条/ 1 页</label>
        </div>
    </div>
</div>

<div id="o"></div>
<div id="insert">
    <div style="height:30px;width:100%;background-color:#4c4c4c">
        <span style="color:white;float: left;margin: 5px 10px;">添加角色</span>
        <button class="btn" onclick="hideRole();" style="float: right;background-image: url('../../Image/guanbi.png');background-repeat:no-repeat;background-color:white;height:20px;background-position: 4px 1px;margin: 5px;"></button>
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">角色编号</span><input value="自动生成,可不填" disabled="disabled" class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">角色名称</span><input class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">备<span style="margin-left:28px">注</span></span><input class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div style="height:40px;background-color:#eeeeee;border-top:1px solid #ddd">
        <button style="margin:6px 10px 0px 180px;">确定</button>
        <button onclick="hideRole();">关闭</button>
    </div>
</div>
<div id="bianJi">
    <div style="height:30px;width:100%;background-color:#4c4c4c">
        <span style="color:white;float: left;margin: 5px 10px;">编辑角色</span>
        <button class="btn" onclick="hideRole();" style="float: right;background-image: url('../../Image/guanbi.png');background-repeat:no-repeat;background-color:white;height:20px;background-position: 4px 1px;margin: 5px;"></button>
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">角色编号</span><input value="000001" disabled="disabled" class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">角色名称</span><input value="门卫" class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div class="form-inline" style="margin:20px">
        <span style="margin-left:10px">备<span style="margin-left:28px">注</span></span><input class="form-control" style="width:150px;margin-left:10px" />
    </div>
    <div style="height:40px;background-color:#eeeeee;border-top:1px solid #ddd">
        <button style="margin:6px 10px 0px 180px;">确定</button>
        <button onclick="hideRole();">关闭</button>
    </div>
</div>

<script type="text/javascript">
    //使用ajax方法请求数据
    //页面加载时调用
    $(function () {
        $(".first").click(function () {
            //将pageIndex = 1
            bindData(1);
        });

        $(".up").click(function () {
            //当前页 = 当前页 -1
            var pageIndex = parseInt($(".PageIndex").val()) - 1;
            bindData(pageIndex);
        });

        $(".next").click(function () {
            //当前页 = 当前页 + 1
            var pageIndex = parseInt($(".PageIndex").val()) + 1;
            bindData(pageIndex);
        });

        $(".last").click(function () {
            bindData(9999999);
        });

        $(".go").click(function () {
            //获取当前文本框中的页
            var pageIndex = parseInt($(".PageIndex").val());
            bindData(pageIndex);
        });

        //绑定查询按钮事件
        $("#btnSearch").click(bindData);
        //加载 ，调用绑定数据方法
        bindData(1);
    });
    //绑定数据方法
    function bindData(pageIndexValue) {
        var RoleNumValue = $("#RoleNum").val();
        //获取数据
        $.ajax({
            url: "@Url.Action("GetRole")",
            data: { RoleNum: RoleNumValue, pageIndex: pageIndexValue },
            dataType: "json",
            type: "post",
            success: function (result) {
                //设置文本框中显示的当前页
                $("#lbMsg").html("当前第" + result.PageIndex + "页" + "    共计" + result.PageCount + "页    共有" + result.Count + "条");
                $("#PageIndex").val(result.PageIndex);


                //清空所有表格（数据行）行
                $("table tr:gt(0)").remove();
                //循环遍历所有数据并显示到控件
                $.each(result.RoleInfies, function (index, value) {
                    var str = "<tr>";
                    str += "<td><input type='checkbox' /></td>";
                    str += "<td>" + value.Id + "</td>";
                    str += "<td>" + value.RoleNum + "</td>";
                    str += "<td>" + value.RoleName + "</td>";
                    str += "<td>" + value.CreateTime + "</td>";
                    str += "<td>" + value.Remark + "</td>";
                    str += "<td><a href = 'javascript:bianJiRole();' title = '编辑' ><img src='../Image/Write.png' /></a><a href='javascript:void(0);' title='删除'><img src='../Image/cha.png' /> </a><a href='../PermissionGranted/Index/?roleId=" + value.Id + "' title='权限分配'><img src='../Image/daochu_icon.png' /></a></td>";
                    str += "</tr>";
                    $("table tbody").append(str);
                });
            }
        });
    }
    
    //新增
    function insertRole() {
        insert.style.display = "block";
        o.style.display = "block";
    }
    function hideRole() {
        insert.style.display = "none";
        bianJi.style.display = "none";
        o.style.display = "none";
    }
    //编辑
    function bianJiRole() {
        bianJi.style.display = "block";
        o.style.display = "block";
    }
</script>