            <table class="table table-bordered table-responsive " id="chakan">
                <tbody>
                </tbody>
            </table>
            <br />
            <table class="table table-bordered table-hover table-responsive " id="XiangXi" style="table-layout:fixed;">
                <thead class="BTGDT">
                    <tr>
                        <th>产品名称</th>
                        <th>产品条码</th>
                        <th>仓库库位</th>
                        <th>报损库位</th>
                        <th>报损数量</th>
                    </tr>
                </thead>
                <tbody class="InfoGDT">
                    <tr class="remove"></tr>
                </tbody>
            </table>
        </div>
